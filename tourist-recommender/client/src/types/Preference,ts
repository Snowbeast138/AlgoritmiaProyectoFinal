import { TourismCategory } from "./attraction";

export interface IUserPreference {
  interests: TourismCategory[];
  duration: number; // Horas totales disponibles
  budgetLevel: "low" | "medium" | "high";
  groupSize: number;
  groupType?: "solo" | "couple" | "family" | "friends";
  mobilityRestrictions?: boolean;
  preferredTransport?: "walking" | "public" | "private";
  mustSeeAttractions?: string[]; // IDs de atracciones obligatorias
}
